{
  "servers": {
    "github-remote-mcp": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "X-MCP-Readonly": "true"
      }
    },
    "microsoft/markitdown-mcp": {
      "type": "stdio",
      "command": "uvx",
      "args": ["markitdown-mcp@0.0.1a4"]
    },
    "hashicorp/terraform-mcp": {
      "command": "docker",
      "args": ["run", "-i", "--rm", "hashicorp/terraform-mcp-server:0.4.0"]
    },
    "microsoft/azure-mcp": {
      "command": "npx",
      "args": ["-y", "@azure/mcp@latest", "server", "start"]
    }
  }
}
